{
  "name": "concept-lattice-visualization_framework",
  "version": "1.0.0",
  "description": "Interactive concept lattice visualization tool (Electron + D3).",
  "type": "module",
  "main": "main.js",
  "author": { 
    "name": "Fabiola Hodo, Baris Sertkaya", 
    "email": "fabiolahodo@gmail.com" },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiolahodo/Concept-Lattice-Visualization-Tool.git"
  },
  "homepage": "https://github.com/fabiolahodo/Concept-Lattice-Visualization-Tool#readme",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run build && electron .",
    "build": "rollup -c",
    
    "dist:win": "npm run build && electron-builder --win nsis --publish never",
    "dist:linux": "npm run build && electron-builder --linux AppImage deb --publish never",
    "dist:mac": "npm run build && electron-builder --mac dmg zip --publish never",
    "dist": "npm run dist:win",

    "dist:win:ci": "npm run build && electron-builder --win nsis",
    "dist:linux:ci": "npm run build && electron-builder --linux AppImage deb",
    "dist:mac:ci": "npm run build && electron-builder --mac dmg zip",

    "dist:local": "npm-run-all -s dist:win:local dist:linux:local"

  },
  "keywords": [ ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "rollup": "^4.44.2",
    "rollup-plugin-copy": "^3.5.0"
  },
  "dependencies": {
    "d3": "^7.9.0",
    "express": "^5.1.0",
    "grid": "^4.10.8",
    "gridjs": "^6.2.0"
  },
  "build": {
    "appId": "com.lattice.app",
    "productName": "Lattice",
    "directories": { "output": "release" },
    "asar": true,
    "files": [
      "main.js",
      "dist/**",
      "package.json",
      "assets/**"
    ],
    "extraResources": [
    "server.cjs",
    { "from": "node_modules/express", "to": "node_modules/express" }
    ],
    "artifactName": "Lattice-${version}-${os}-${arch}.${ext}",
    "publish": ["github"],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons",
      "category": "Development",
      "maintainer": "Fabiola Hodo <fabiolahodo@gmail.com>"
    }
  }
}
